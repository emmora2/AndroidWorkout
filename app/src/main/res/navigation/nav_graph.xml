<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeSelectedWorkoutsFragment">

    <fragment
        android:id="@+id/viewWorkoutsFragment"
        android:name="com.example.workoutapi.ViewWorkoutsFragment"
        android:label="fragment_view_workouts"
        tools:layout="@layout/fragment_view_workouts" >
        <action
            android:id="@+id/action_viewWorkoutsFragment_to_workoutConfirmation"
            app:destination="@id/workoutConfirmation" />
    </fragment>
    <fragment
        android:id="@+id/homeSelectedWorkoutsFragment"
        android:name="com.example.workoutapi.HomeSelectedWorkoutsFragment"
        android:label="HomeSelectedWorkoutsFragment"
        tools:layout="@layout/fragment_home_selected_workouts">
        <action
            android:id="@+id/action_homeSelectedWorkoutsFragment_to_viewWorkoutsFragment"
            app:destination="@id/viewWorkoutsFragment" />
        <action
            android:id="@+id/action_homeSelectedWorkoutsFragment_to_viewWorkoutFragment"
            app:destination="@id/viewWorkoutFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutDateSelectionFragment"
        android:name="com.example.workoutapi.WorkoutDateSelectionFragment"
        android:label="WorkoutDateSelectionFragment" >
        <action
            android:id="@+id/action_workoutDateSelectionFragment_to_homeSelectedWorkoutsFragment"
            app:destination="@id/homeSelectedWorkoutsFragment" />
        <argument
            android:name="workoutName"
            app:argType="string" />
        <argument
            android:name="workoutReps"
            app:argType="integer" />
        <argument
            android:name="workoutSets"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/viewWorkoutFragment"
        android:name="com.example.workoutapi.ViewWorkoutFragment"
        android:label="fragment_view_workout"
        tools:layout="@layout/fragment_view_workout" >
        <argument
            android:name="workoutDate"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/workoutConfirmation"
        android:name="com.example.workoutapi.WorkoutConfirmation"
        android:label="fragment_workout_confirmation"
        tools:layout="@layout/fragment_workout_confirmation" >
        <action
            android:id="@+id/action_workoutConfirmation_to_workoutDateSelectionFragment"
            app:destination="@id/workoutDateSelectionFragment" />
    </fragment>
</navigation>